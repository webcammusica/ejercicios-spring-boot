<?xml version="1.0" encoding="UTF-8"?>
<!-- configuración de log4j2 adicional a la de ejercicio6/pom.xml -->
<!-- log4j2 usa Logback, abstracción: slf4j como fachada por lo que existe: 
	ejercicio6/src/main/resources/logback.xml -->
<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{MM-dd-yyyy hh:mm:ss,SSS a} %5p %c{1}:%L - %m%n" />
		</Console>

		<RollingFile name="RollingFile"
			fileName="./logs/spring-boot.log"
			filePattern="./logs/spring-boot-%d{-dd-MMMM-yyyy}-%i.log.gz">
			<PatternLayout>
				<pattern>%d{MM-dd-yyyy hh:mm:ss,SSS a} %5p %c{1}:%L -
					%m%n</pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="5 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" />
			<!-- <AppenderRef ref="RollingFile" /> -->
		</Root>
	</Loggers>

</Configuration>